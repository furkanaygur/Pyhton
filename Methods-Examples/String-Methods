website = "http://www.github.com"
website = website.lstrip(':htp/')
print(website)
result = website.startswith('www')
print(result)
result = website.endswith('.com')
print(result)
result = website.find('com')
print(result)
result = "Hello".isalpha()
print(result)
result = "123".isdigit()
print(result)
